---
export interface Props {
  title: string;
  content: string;
}

const { title, content } = Astro.props;
---

<div class="tip-card">
  <h3>{title}</h3>
  <p set:html={content}></p>
</div>

<style>
  .tip-card {
    background: white;
    padding: 1.5rem;
    border-radius: 16px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(143, 188, 143, 0.2);
    transition: all 0.3s ease;
    position: relative;
  }

  .tip-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #8fbc8f, #d2b48c);
    border-radius: 16px 16px 0 0;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .tip-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    border-color: rgba(143, 188, 143, 0.4);
  }

  .tip-card:hover::before {
    opacity: 1;
  }

  .tip-card h3 {
    font-size: 1.2rem;
    color: #8fbc8f;
    margin-bottom: 0.8rem;
    font-weight: 600;
  }

  .tip-card p {
    color: #5d4037;
    line-height: 1.6;
    margin: 0;
  }

  .tip-card :global(strong) {
    color: #cd853f;
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .tip-card h3 {
      font-size: 1.1rem;
    }
  }
</style>

